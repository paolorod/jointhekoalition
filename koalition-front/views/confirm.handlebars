
 <div class="container">
        <div class="row center light">
          <div class="col s12 center section">
            <h1 class=" purple-text text-lighten-2 logo">{{global.couple}}</h2>
            <h5 class="light date">{{global.date}}</h5>
            <h5 class="light city">{{global.city}}</h5>
          </div>
        </div>
 </div>

<div class="container">
    <div class="row">
        <div class="col s12">
            <h4>{{confirmation.main_contact}}</h4>
            <div class="input-field">
                <input id="first_name" type="text" class="validate" name="first_name">
                <label for="first_name">{{confirmation.first_name}}</label>
            </div>
            <div class="input-field">
                <input id="last_name" type="text" class="validate" name="last_name">
                <label for="last_name">{{confirmation.last_name}}</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">phone</i>
                <input id="telephone" type="tel" class="validate" name="tel">
                <label for="telephone">{{confirmation.telephone}}</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">email</i>
                <input id="email" type="email" class="validate" name="email">
                <label for="email">{{confirmation.email}}</label>
            </div>

            <h4>{{confirmation.other_people}}</h4>
            <div class="chips chips-placeholder input-field">
                <input id="others" class="input" placeholder="{{confirmation.other_people_list}}"></input>
            </div>

            <h4>{{confirmation.info}}</h4>
            <div>
                <label>
                    <input type="checkbox" id="need_hostel" name="need_hostel"/>
                    <span>{{confirmation.need_hostel}}</span>
                </label>
            </div>
            <div>
                <label>
                    <input type="checkbox" id="dinner_14" name="dinner_14"/>
                    <span>{{confirmation.dinner_14}}</span>
                </label>
            </div>

            <textarea id="particular_food" class="materialize-textarea" name="particular_food"></textarea>
            <label for="particular_food">{{confirmation.particular-food}}</label>

            <textarea id="particular_mobility" class="materialize-textarea" name="particular_mobility"></textarea>
            <label for="particular_mobility">{{confirmation.particular-mobility}}</label>

            <textarea id="particular_babies" class="materialize-textarea" name="particular_babies"></textarea>
            <label for="particular_babies">{{confirmation.particular-babies}}</label>

            <input id="token" style="display: none" value="{{token}}">

            <textarea id="message" class="materialize-textarea" name="message"></textarea>
            <label for="message">{{confirmation.message}}</label>
            <div class="section">
                  <button id="confirm" class="btn waves-effect waves-light purple lighten-1" name="action" onclick="confirmation_form_submit()">{{navbar.confirmation}}</button>
           </div>

        </div>
    </div>
</div>